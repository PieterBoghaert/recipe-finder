{
    "version": 2,
    "framework": null,
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.7.4" }
    },
    "public": true,
    "buildCommand": "vite build",
    "outputDirectory": "public",
    "routes": [
        { "src": "/build/(.*)", "dest": "/public/build/$1" },
        { "src": "/images/(.*)", "dest": "/public/assets/images/$1" },
        { "src": "/robots.txt", "dest": "/public/robots.txt" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ],

    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://recipe-finder-ten-livid.vercel.app",
        "APP_KEY": "base64:Rx0WRtVsVuH5GVN3Pn9e+9m5vTjsoXcG2M9kdj5iXNs=",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "DB_CONNECTION": "pgsql",
        "ASSET_URL": "https://recipe-finder-ten-livid.vercel.app",
        "DB_URL": "YOUR_DB_URL"
    }
}
